@using BusinessObjects.DTO
@model BookDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- single product -->
<div class="single-product mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="single-product-img">
                    <img src="@Model.ImageUrl">
                </div>
            </div>
            <div class="col-md-7">
                <div class="single-product-content">
                    <h3>@Model.Title</h3>
                    <p><strong>Tác giả:</strong>@Model.AuthorName</p>
                    <p class="single-product-pricing">@Model.Price</p>
                    <p>@Model.Description</p>
                    <div class="single-product-form">
                        <form asp-action="AddTocart" method="post" asp-route-productId="@Model.BookId">
                            <input type="number" min="1" max="@Model.StockQuantity" value="1" name="quantity">
                            <br />
                            <button class="cart-btn" type="submit"><i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng</button>
                        </form>

                        <p><strong>Thể loại: </strong>@Model.CategoryName</p>
                        <p><strong>Nhà xuất bản: </strong>@Model.Publisher</p>
                        <p><strong>Ngày xuất bản: </strong>@Model.PublishDate?.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end single product -->
<!-- more products -->
<div class="more-products mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Sản phẩm</span> liên quan</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (BookDto book in ViewBag.BookRelate)
            {
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="single-product-item">
                        <div class="product-image">
                            <a asp-action="ProductDetail" asp-route-productId="@book.BookId"><img src="@book.ImageUrl" style="width: 250px; height: 300px"></a>
                        </div>
                        <h3>@book.Title</h3>
                        <p class="product-price"><span>@book.Price</span></p>
                        <a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- end more products -->
