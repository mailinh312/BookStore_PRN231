@using BusinessObjects.DTO;
@model List<BookDto>

@{
    ViewData["Title"] = "Home Page";
}

<!-- products -->
<div class="product-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="product-filters">
				</div>
			</div>
		</div>

		<div class="row product-lists">

			@foreach (var book in Model)
			{
				<div class="col-lg-4 col-md-6 text-center strawberry">
					<div class="single-product-item">
						<div class="product-image">
							<a asp-action="ProductDetail" asp-route-id="@book.BookId"><img src="@book.ImageUrl" style="width: 250px; height: 300px"></a>
						</div>
						<h6>@book.Title</h6>
						<h6 class="product-price"> @book.Price VND</h6>
						<a asp-action="AddToCart" asp-route-productId="@book.BookId" class="cart-btn"><i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
					</div>
				</div>
			}
		</div>
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="pagination-wrap">
				
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end products -->
