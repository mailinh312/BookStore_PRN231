@using BusinessObjects.Models;
@using BusinessObjects.DTO;
@using Microsoft.AspNetCore.Identity;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function submitForm() {
        var form = document.getElementById("cateForm");
        form.submit();
    }
</script>

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title-5 m-b-35">Quản lý sản phẩm</h1>
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                        <form id="cateForm" asp-action="Index" method="get">
                            <div class="rs-select2--light rs-select2--md">

                                <select class="js-select2" name="cid" asp-items="@ViewBag.categories" onchange="submitForm()">
                                    <option value="0">Tất cả thể loại</option>
                                </select>

                                <div class="dropDownSelect2"></div>
                            </div>
                            <div class="rs-select2--light rs-select2--md">

                                <select class="js-select2" name="aid" asp-items="@ViewBag.authors" onchange="submitForm()">
                                    <option value="0">Tác giả</option>
                                </select>

                                <div class="dropDownSelect2"></div>
                            </div>
                        </form>
                    </div>
                    <div class="table-data__tool-right">
                        <button class="au-btn au-btn-icon au-btn--green au-btn--small" style="background-color: aliceblue">
                            <a href="/admin/product/addproduct"> <i class="zmdi zmdi-plus"></i>Thêm sản phẩm</a>
                        </button>
                    </div>
                </div>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Hình ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Thể loại</th>
                                <th>Tác giả</th>
                                <th>Nhà xuất bản</th>
                                <th>Ngày xuất bản</th>
                                <th class="text-right">Giá</th>
                                <th>Số lượng trong kho</th>
                                <th>Hoạt động</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in ViewBag.books)
                            {
                                <tr>
                                    <td>@book.BookId</td>
                                    <td> <img src="@book.ImageUrl" /></td>
                                    <td>@book.Title</td>
                                    <td>@book.CategoryName</td>
                                    <td>@book.AuthorName</td>
                                    <td>@book.Publisher</td>
                                    <td>@book.PublishDate</td>
                                    <td class="text-right">@book.Price</td>
                                    <td>@book.StockQuantity</td>
                                    <td>@book.Active</td>
                                    <td>
                                        <div class="table-data-feature">
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Send">
                                                <i class="zmdi zmdi-mail-send"></i>
                                            </button>
                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <a asp-controller="Product" asp-action="UpdateProductForm" asp-route-bookId="@book.BookId"><i class="zmdi zmdi-edit"></i></a>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>


