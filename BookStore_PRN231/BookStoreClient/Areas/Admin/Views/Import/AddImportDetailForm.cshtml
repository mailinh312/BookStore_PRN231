@using BusinessObjects.Models;
@using BusinessObjects.DTO;
@using Microsoft.AspNetCore.Identity;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ImportDetailCreateDto
@{
    ViewData["Title"] = "AddImportDetailForm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- HEADER DESKTOP-->

<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">
                <form class="form-header" asp-action="Index" method="get">
                   
                </form>

                <div class="header-button">

                    <div class="account-wrap">
                        <div class="account-item clearfix js-item-menu">
                            <div class="image">
                            </div>
                            <div class="content">
                                <a class="js-acc-btn" asp-page="/Account/Manage/Index"></a>
                            </div>
                            <div class="account-dropdown js-dropdown">
                                <div class="account-dropdown__body">
                                    <div class="account-dropdown__item">
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="zmdi zmdi-account"></i>Tài khoản
                                        </a>
                                    </div>
                                </div>
                                <div class="account-dropdown__footer">
                                    <a href="/logout">
                                        <i class="zmdi zmdi-power"></i>Đăng xuất
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!--END HEADER DESKTOP-->

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title-5 m-b-35">Quản lý nhập hàng</h1>
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                    </div>
                    <div class="table-data__tool-right">
                        <button class="au-btn au-btn-icon au-btn--green au-btn--small" style="background-color: aliceblue">
                            <a href="/admin/import/addimportdetailform"> <i class="zmdi zmdi-plus"></i>Nhập thêm sản phẩm</a>
                        </button>

                    </div>
                </div>
                <div class="table-responsive table--no-card m-b-30">
                    <form method="post" asp-action="AddImportDetail">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="rs-select2--light rs-select2--md" style="width: 500px">
                            <select class="js-select2" asp-for="BookId">

                                @foreach (var item in ViewBag.Books)
                                {
                                    <option value="@item.BookId">@item.Title</option>
                                }
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                        <br /><br />
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="InputPrice" class="control-label"></label>
                            <input asp-for="InputPrice" class="form-control" />
                            <span asp-validation-for="InputPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="OutputPrice" class="control-label"></label>
                            <input asp-for="OutputPrice" class="form-control" />
                            <span asp-validation-for="OutputPrice" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Thêm" class="btn btn-success btn-sm" />
                            <a asp-action="AddImportForm" class="btn btn-sm btn-primary">Quay lại phiếu nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

