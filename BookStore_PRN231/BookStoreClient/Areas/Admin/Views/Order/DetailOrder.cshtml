@using BusinessObjects.Models;
@using BusinessObjects.DTO;
@using Microsoft.AspNetCore.Identity;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<OrderDetailDto>
@{
    ViewData["Title"] = "DetailOrder";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title-5 m-b-35">Chi tiết đơn hàng</h1>
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                    </div>
                    <div class="table-data__tool-right">
                    </div>
                </div>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderDetailId</td>
                                    <td><a asp-controller="Product" asp-action="UpdateProductForm" asp-route-bookId="@order.BookId">@order.BookTitle</a></td>
                                    <td>@order.Quantity</td>
                                    <td>@order.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="form-group">

                    <a href="/admin/order" class="btn btn-sm btn-primary">Quay lại danh sách đơn hàng</a>

                </div>
            </div>
        </div>
    </div>
</div>


